{
  "name": "react-hipstaplate",
  "version": "0.0.2",
  "description": "Modern ReactJS/express full-stack boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/DashBouquet/react-hipstaplate.git"
  },
  "engines": {
    "npm": ">=3",
    "node": "6.11.1"
  },
  "author": "Vitali Shalak",
  "license": "MIT",
  "scripts": {
    "initialize": "bash ./scripts/init.sh",
    "start": "tsc && yarn start:dev",
    "build": "tsc && yarn build:next",
    "start:dev": "cross-env NODE_ENV=development concurrently \"yarn watch:tsc\" \"yarn start:next\"",
    "start:prod": "yarn build && cross-env NODE_ENV=production yarn start:next",
    "watch:tsc": "tsc --watch",
    "build:tsc": "tsc",
    "start:next": "cd app/build && nodemon -w server server",
    "build:next": "cd app/build && next build",
    "test": "cross-env NODE_ENV=test jest --coverage"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/app"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "tests/.*\\.test\\.(j|t)sx?$"
  },
  "dependencies": {
    "@types/enzyme": "^2.8.4",
    "@types/jasmine": "^2.5.53",
    "@types/jest": "^20.0.6",
    "@types/next": "^2.4.2",
    "@types/ramda": "^0.24.5",
    "@types/react": "^16.0.0",
    "@types/react-redux": "^4.4.47",
    "@types/recompose": "^0.23.2",
    "body-parser": "^1.17.2",
    "cross-env": "^5.0.1",
    "express": "^4.15.3",
    "express-session": "^1.15.4",
    "graphql": "^0.10.5",
    "graphql-server-express": "^1.0.5",
    "graphql-tools": "^1.1.0",
    "isomorphic-fetch": "^2.2.1",
    "next": "^3.0.3",
    "next-redux-saga": "^1.0.1",
    "next-redux-wrapper": "^1.3.2",
    "ramda": "^0.24.1",
    "react": "^15.6.1",
    "react-apollo": "^1.4.10",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "recompose": "^0.24.0",
    "redux": "^3.7.2",
    "redux-saga": "^0.15.6",
    "styled-components": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^8.0.17",
    "babel-jest": "^20.0.3",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-styled-components": "^1.1.7",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "enzyme": "^2.9.1",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "nodemon": "^1.11.0",
    "react-test-renderer": "^15.6.1",
    "redux-devtools-extension": "^2.13.2",
    "ts-jest": "^20.0.8",
    "tslint": "^5.5.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.4.2"
  }
}
